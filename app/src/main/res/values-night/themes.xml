<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GemniAPI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/meDark</item>
        <item name="colorPrimaryDark">@color/geminiDark</item>
        <item name="colorAccent">@color/statusBarColorDark</item>
    </style>

    <style name="Theme.GemniAPI" parent="Base.Theme.GemniAPI">
        <item name="android:statusBarColor">@color/statusBarColorDark</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_bulb</item>
        <item name="postSplashScreenTheme">@style/Theme.GemniAPI</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>